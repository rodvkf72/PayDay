<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.deu.payday.dao.LoginMapper">

    <select id="login" resultType="string">
    	<![CDATA[
    	SELECT DECODE(user_pw, #{pw}, '1', '0') FROM user_info WHERE user_id=#{id}
        ]]>
    </select>
	<select id="goodslist" resultType="com.deu.payday.util.PubMap">
		<![CDATA[
		SELECT goods_no, goods_name, goods_price FROM goods
		]]>
	</select>
</mapper>